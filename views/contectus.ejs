       <script>
        document.getElementById('userDataForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent the form from submitting the default way

            const formData = new FormData(this);

            // Convert FormData to an object
            const data = {};
            formData.forEach((value, key) => {
                data[key] = value;
            });

            // Send the data to the server using fetch
            fetch('/submit', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(result => {
                // Handle the JSON response from the server
                console.log(result); // Output: { message: 'User data stored successfully!' }

                // Show popup/alert to the user
                document.getElementById('successMessage').innerText = "Thank You for the Request, We will get back to You Within 24Hrs";

        // Show the modal
        var successModal = new bootstrap.Modal(document.getElementById('successModal'));
        successModal.show();
                this.reset();
            })
            .catch(error => {
                console.error('Error:', error);
                // Handle error, e.g., show error message to user
                alert('Error storing user data. Please try again.');
            });
        });

        fetch('/user-data')
      .then(response => response.json())
      .then(data => {
        const container = document.getElementById('user-data-container');
        if (data.message) {
          container.innerHTML = `<p>${data.message}</p>`;
        } else {
          data.forEach(item => {
            const dataDiv = document.createElement('div');
            dataDiv.classList.add('user-data-item');
            dataDiv.innerHTML = `
              <p>Name: ${item.name}</p>
              <p>Email: ${item.email}</p>
              <p>Phone: ${item.phone}</p>
              <p>City: ${item.city}</p>
              <p>Project Name: ${item.project_name}</p>
              <p>Status: ${item.status}</p>
              <hr>
            `;
            container.appendChild(dataDiv);
          });
        }
      })
      .catch(error => {
        console.error('Error fetching user data:', error);
      });


       </script>
