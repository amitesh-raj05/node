            border: 5px solid #28a745;
            border-radius: 50%;
            position: relative;
            animation: scaleUp 0.5s ease-in-out;
        }
        .tick-icon::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 20px;
            height: 10px;
            border-left: 5px solid #28a745;
            border-bottom: 5px solid #28a745;
            transform: translate(-50%, -50%) rotate(-45deg);
            animation: drawTick 0.5s ease-in-out 0.5s forwards;
            opacity: 0;
        }
        @keyframes scaleUp {
            0% {
                transform: scale(0);
            }
            100% {
                transform: scale(1);
            }
        }
        @keyframes drawTick {
            0% {
                width: 0;
                height: 0;
                opacity: 1;
            }
            100% {
